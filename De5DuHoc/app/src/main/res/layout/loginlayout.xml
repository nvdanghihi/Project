<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:title="Baithi5"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_x="0dp"
        android:layout_y="84dp"
        android:text="LOGIN FORM"
        android:textAlignment="center"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="132dp"
        android:layout_height="37dp"
        android:layout_x="14dp"
        android:layout_y="188dp"
        android:text="Username"
        android:textAlignment="center"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="128dp"
        android:layout_height="44dp"
        android:layout_x="16dp"
        android:layout_y="283dp"
        android:text="Password"
        android:textAlignment="center"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/txtuser"
        android:layout_width="220dp"
        android:layout_height="56dp"
        android:layout_x="168dp"
        android:layout_y="175dp"
        android:ems="10"
        android:hint="Nhập username"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtpass"
        android:layout_width="222dp"
        android:layout_height="60dp"
        android:layout_x="167dp"
        android:layout_y="265dp"
        android:ems="10"
        android:hint="Nhập password"
        android:inputType="text" />

    <Button
        android:id="@+id/btnexit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="83dp"
        android:layout_y="380dp"
        android:text="Exit" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="222dp"
        android:layout_y="377dp"
        android:text="Login" />

</AbsoluteLayout>

