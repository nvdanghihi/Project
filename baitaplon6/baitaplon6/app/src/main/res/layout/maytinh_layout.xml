<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtpheptinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text=""
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/txtketqua"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtketqua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"

        android:textSize="30dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btncot"
                style="@style/operatorButton"
                android:layout_width="65dp"
                android:onClick="onOperatorClick"
                android:text="cot"
                android:textSize="11dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/operatorButton"
                android:onClick="onOperatorClick"
                android:text="mod"
                android:id="@+id/btnmod"
                android:textSize="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnclear"
                style="@style/operatorButton"
                android:hint="clear"
                android:onClick="onAllclearClick"
                android:text="AC"
                android:textSize="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnback"
                style="@style/digibutton"
                android:hint="back"
                android:onClick="onBackClick"
                app:icon="@drawable/baseline_backspace_24"
                app:iconTint="@color/btnBackground2" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                style="@style/operatorButton"
                android:onClick="onOperatorClick"
                android:textSize="14dp"
                android:id="@+id/btnsin"
                android:text="sin"/>

            <com.google.android.material.button.MaterialButton
                style="@style/operatorButton"
                android:onClick="onOperatorClick"
                android:text="cos"
                android:id="@+id/btncos"
                android:textSize="14dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/operatorButton"
                android:onClick="onOperatorClick"
                android:text="tan"
                android:textSize="14dp"
                android:id="@+id/btntan"/>
            <com.google.android.material.button.MaterialButton
                style="@style/operatorButton"
                android:onClick="onOperatorClick"
                android:text="/"
                android:id="@+id/btnchia"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                style="@style/digibutton"
                android:onClick="onDigitClick"
                android:text="7"
                android:id="@+id/btn7"/>
            <com.google.android.material.button.MaterialButton
                style="@style/digibutton"
                android:onClick="onDigitClick"
                android:text="8"
                android:id="@+id/btn8"/>
            <com.google.android.material.button.MaterialButton
                style="@style/digibutton"
                android:onClick="onDigitClick"
                android:text="9"
                android:id="@+id/btn9"/>
            <com.google.android.material.button.MaterialButton
                style="@style/operatorButton"
                android:onClick="onOperatorClick"
                android:text="*"
                android:id="@+id/btnnhan"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                style="@style/digibutton"
                android:onClick="onDigitClick"
                android:text="4"
                android:id="@+id/btn4"/>
            <com.google.android.material.button.MaterialButton
                style="@style/digibutton"
                android:onClick="onDigitClick"
                android:text="5"
                android:id="@+id/btn5"/>
            <com.google.android.material.button.MaterialButton
                style="@style/digibutton"
                android:onClick="onDigitClick"
                android:text="6"
                android:id="@+id/btn6"/>
            <com.google.android.material.button.MaterialButton
                style="@style/operatorButton"
                android:onClick="onOperatorClick"
                android:text="+"
                android:id="@+id/btncong"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                style="@style/digibutton"
                android:onClick="onDigitClick"
                android:text="1"
                android:id="@+id/btn1"/>
            <com.google.android.material.button.MaterialButton
                style="@style/digibutton"
                android:onClick="onDigitClick"
                android:text="2"
                android:id="@+id/btn2"/>
            <com.google.android.material.button.MaterialButton
                style="@style/digibutton"
                android:onClick="onDigitClick"
                android:text="3"
                android:id="@+id/btn3"/>
            <com.google.android.material.button.MaterialButton
                style="@style/operatorButton"
                android:onClick="onOperatorClick"
                android:text="-"
                android:id="@+id/btntru"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn0"
                style="@style/digibutton"
                android:layout_width="78dp"
                android:onClick="onDigitClick"
                android:text="0" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btndoidau"
                style="@style/digibutton"
                android:onClick="onDigitClick"
                android:textSize="20dp"
                android:text="-/+" />

            <com.google.android.material.button.MaterialButton
                style="@style/digibutton"
                android:onClick="onDigitClick"
                android:text="."
                android:id="@+id/btnDot"/>

            <com.google.android.material.button.MaterialButton
                style="@style/operatorButton"
                android:onClick="onEqualClick"
                android:text="="
                android:id="@+id/btnbang"/>


        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:background="@color/black"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@id/LinearLayout"/>

</androidx.constraintlayout.widget.ConstraintLayout>