<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Baithi1"
        app:titleTextColor="@android:color/white" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="356dp"
        android:layout_height="55dp"
        android:layout_x="24dp"
        android:layout_y="83dp"
        android:textSize="35dp"
        android:textAlignment="center"
        android:text="ĐĂNG KÝ KÍ TÚC XÁ" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="195dp"
        android:layout_height="39dp"
        android:layout_x="107dp"
        android:layout_y="152dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="LOẠI PHÒNG NGỦ" />

    <RadioGroup
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_x="31dp"
        android:layout_y="208dp">

        <RadioButton
            android:id="@+id/rdo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phòng riêng - 1 giường" />

        <RadioButton
            android:id="@+id/rdo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phòng ghép - 2 giường" />

        <RadioButton
            android:id="@+id/rdo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phòng ghép - 4 giường" />

        <RadioButton
            android:id="@+id/rdo4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phòng ghép - 8 giường" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="188dp"
        android:layout_height="33dp"
        android:layout_x="113dp"
        android:layout_y="425dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:text="DỊCH VỤ" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="37dp"
        android:layout_y="467dp"
        android:text="Bãi đỗ xe" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="39dp"
        android:layout_y="534dp"
        android:text="Wifi" />

    <Button
        android:id="@+id/btnchoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="622dp"
        android:text="Choose" />

    <Button
        android:id="@+id/btnexit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="135dp"
        android:layout_y="620dp"
        android:text="Exit" />

    <Button
        android:id="@+id/btnnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="263dp"
        android:layout_y="620dp"
        android:text="Next" />
</AbsoluteLayout>